<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >
<android.support.constraint.ConstraintLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:hint="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_signup_username"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.29" />

    <EditText
        android:hint="password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_signup_password"
        app:layout_constraintTop_toBottomOf="@+id/fragment_signup_username"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_signup_username"
        android:inputType="textPassword"
        android:layout_marginTop="40dp" />

    <EditText
        android:hint="confirm password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_signup_confirmpassword"
        app:layout_constraintTop_toBottomOf="@+id/fragment_signup_password"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_signup_password"
        android:inputType="textPassword"
        android:layout_marginTop="48dp" />

    <EditText
        android:hint="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_signup_email"
        app:layout_constraintTop_toBottomOf="@+id/fragment_signup_confirmpassword"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_signup_confirmpassword"
        android:layout_marginTop="32dp" />

    <Button
        android:text="submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_signup_submit"
        app:layout_constraintTop_toBottomOf="@+id/fragment_signup_email"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_signup_email"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="40dp" />
</android.support.constraint.ConstraintLayout>

</layout>