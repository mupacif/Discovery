<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <EditText
        android:hint="Login"
        android:layout_width="222dp"
        android:layout_height="41dp"
        android:id="@+id/tv_fragment_signin_login"
        android:layout_marginTop="112dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tv_fragment_signin_password"
        android:layout_alignEnd="@+id/tv_fragment_signin_password"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:textAlignment="center"/>

    <EditText
        android:hint="Password"
        android:layout_width="222dp"
        android:layout_height="44dp"
        android:id="@+id/tv_fragment_signin_password"
        android:layout_below="@+id/tv_fragment_signin_login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="@+id/tv_fragment_signin_login"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_fragment_signin_login"
        android:textAlignment="center"/>

    <Button
        android:text="Sign in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_fragment_signin_bt_signin"
        android:layout_below="@+id/tv_fragment_signin_password"
        android:layout_alignLeft="@+id/tv_fragment_signin_password"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_fragment_signin_password"
        app:layout_constraintLeft_toLeftOf="@+id/tv_fragment_signin_login"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp" />

    <Button
        android:text="sign up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_fragment_signin_bt_signup"
        android:layout_below="@+id/tv_fragment_signin_bt_signin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toBottomOf="@+id/tv_fragment_signin_bt_signin"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_fragment_signin_bt_signin" />
</android.support.constraint.ConstraintLayout>
</layout>